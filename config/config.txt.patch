# Add to /boot/firmware/config.txt

# SPI for TFT touchscreen
dtparam=spi=on

# TFT display overlay (Inland 3.5" resistive touch)
# Try these in order if one doesn't work:
#   dtoverlay=piscreen,speed=16000000,rotate=270
#   dtoverlay=pitft35-resistive,rotate=270,speed=32000000
dtoverlay=pitft35-resistive,rotate=270,speed=32000000,fps=30

# I2S audio (SPH0645 mic + Pirate Audio DAC/amp)
dtoverlay=hifiberry-dac
dtoverlay=i2s-mmap

# Keep onboard audio as fallback (headphone jack)
dtparam=audio=on
